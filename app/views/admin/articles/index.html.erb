<h1>Articles</h1>
<hr>
<h5>Create a<%= link_to "new", new_admin_article_path, class: "px-2" %>article</h5>
<br>
<table class="table table-sm table-border">
  <% @articles.each do |article| %>
    <tr>
      <td><h5 class="pt-2"><%= article.title %></h5></td>
      <td><%= link_to "edit", edit_admin_article_path(article), class: 'btn btn-primary' %></td>
      <td><%= link_to "delete", admin_article_path(article), data: {confirm: "Deleting Article! Are you sure?"}, method: :delete, class: 'btn btn-primary' %></td>
    </tr>
  <% end %>
</table>
<%= paginate @articles, theme: 'twitter-bootstrap-4' %>

